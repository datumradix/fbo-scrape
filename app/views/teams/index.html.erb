<div class="row">
  <div class="span9">
    <h4><%= current_user.team.name %> </h4>
    <p><%= current_user.team.description %> </p>
  </div>
  <div class="span3">
    <p>
      Username: <%= link_to current_user.username, edit_user_path(current_user) %> 
    </p>
    <p>
      Role: <%= link_to current_user.role.title, roles_path %> 
    </p>
  </div>
</div>
<br>
<ul class="nav nav-tabs">
  <li>
    <%= link_to "Home", user_path(current_user) %>
  </li>
  <li class="active">
    <%= link_to "Team", "#" %>
  </li>
  <li>
    <%= link_to "Selection Criteria", team_path(current_user.team_id) %>
  </li>
</ul>

<div class="row">
  <div class="span9">
    <div class="btn-group">
      <button class="btn"><%= link_to "My Team", team_members_path %></button>
      <button class="btn">All Teams</button>
      <% if current_user.role_id < 3 %>
        <button class="btn"><%= link_to "Build Your Team", new_user_path %></button>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span12">
    <h4>All Teams</h4>

    <% if permitted_to? :manage, :teams %>
      <%= link_to 'New Team', new_team_path %>
    <% end %>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Charter</th>
          <th>Team Lead</th>
          <th>Team Members</th>
          <th>Not Evaluated</th>
          <th>Watchlist</th>
          <th>Reject</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <% if current_user.team.name == team.name %> 
              <td><%= link_to team.name, team_members_path %></td>
            <% else %>
              <td> <%= team.name %> </td>
            <% end %>
            <td><%= team.description %></td>
            <% if team.users.find_by(role_id: 22) %>
              <td><%= team.users.find_by(role_id: 22).username %>
            <% else %>
              <td><%= User.find_by(role_id: 1).username %></td>
            <% end %>
            <td><%= team.users.count %></td>
            <% if permitted_to? :manage, :teams %>
              <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
            <td><%= team.evaluations.where(evaluation_code_id: 1).count %></td>
            <td><%= team.evaluations.where(evaluation_code_id: 2).count %></td>
            <td><%= team.evaluations.where(evaluation_code_id: 3).count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
