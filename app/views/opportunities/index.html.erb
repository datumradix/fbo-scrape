<div class="row">
  <div class="span12"> 
    <form class="navbar-form pull-right" role="search">
      <div class="form-group">
        <%= form_tag opportunities_path, :method => :get do %>
          <%= hidden_field_tag :direction, params[:direction] %>
          <%= hidden_field_tag :sort, params[:sort] %>
          <p>
            <%= text_field_tag :search, params[:search], :class => "form-control" %>
            <%= submit_tag "Search", :name => nil, :class => "btn btn-default" %>
          </p>
        <% end %>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="span12">
      <%= will_paginate @opportunities %>
      <table class="table table-hover">
        <thead>
          <!-- <tr>
            <th><%= sortable "like", "Rating" %></th>
            <th><%= sortable "id", "Opportunity" %></th>
            <th><%= sortable "class_code", "Classification" %> </th>
            <th><%= sortable "agency" %></th>
            <th><%= sortable "opp_type", "Type" %></th>
            <th><%= sortable "post_date", "Posted" %></th>
            <th><%= sortable "response_date", "Deadline" %></th>
          </tr> -->
            <th></th>
            <th>Opportunity</th>
            <th>Agency</th>
            <th>Classification</th>
            <th>Type</th>
            <th>Posted</th>
        </thead>

        <tbody>
          <% @opportunities.each do |opportunity| %>
            <tr>
              <td>
                <% if opportunity.management_evaluation %>
                  <%#= opportunity.management_evaluation %>
                  <% if opportunity.comments.length > 0 %>
                    <p><%= pluralize(opportunity.comments.count, "msg") %> </p>
                    
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to opportunity.opportunity, opportunity, :target=>"_blank" %></td>
              <td><%= opportunity.agency %></td>
              <td><%= opportunity.class_code %> </td> 
              <td><%= opportunity.opp_type %></td>
              <td><%= opportunity.post_date.strftime("%b %d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @opportunities %>
  </div>
</div>