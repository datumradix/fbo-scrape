<% if current_user %>
<form class="navbar-search pull-right">
  <%= search_form_for @search, url: opportunities_path(:set_filter => 3), method: :post do |f| %>
    <%= f.search_field :opportunity_cont, :class=>"search-query", :placeholder=>"Find Opportunities" %>
    <%= f.submit "Search", :class=>"btn btn-small" %>
  <% end %>
</form>
  <div class="row">
    <div class="span2">
      <br><br><br>
      <div class="well">
        <form>
          <%= search_form_for @search, url: opportunities_path, method: :post do |f| %>
            <div>  
              <%#= f.search_field :opportunity_cont, :class=>"search-query", :placeholder=>"Find Opportunities" %>
            </div>
            <br>
            <% if @active_team.search_keywords.present? %>
              <p><strong>Filter by Keyword</strong></p>
              <div class="checkbox">
                <% @active_team.search_keywords.all.uniq.each do |search_keyword| %>
                  <%#= check_box_tag('q[opportunities_opportunity_cont_any][]', search_keyword.name) %>
                  <%= check_box_tag('q[opportunity_cont]', search_keyword.name) %>
                  <%= search_keyword.name %><br>
                <% end %>
                <br>
              </div>
              <%= f.submit "Apply", :class=>"btn btn-small" %>
            <% end %>
          <% end %>
        </form>
      </div>
    </div>
    <div class="span10">
      <br>
        <%= will_paginate @opportunities %>
        <table class="table table-hover">
          <thead>
              <th></th>
              <th>Opportunity</th>
              <th>Agency</th>
              <th>Classification</th>
              <th>Type</th>
              <th>Posted</th>
          </thead>
          <tbody>
            <% @opportunities.each do |evaluated_opportunity| %>
              <tr>
                <td>
                  <%# if evaluated_opportunity.comments.length > 0 %>
                    <p><%#= pluralize(evaluated_opportunity.comments.count, "msg") %> </p>
                  <%# end %>
                </td>
                <td><%= link_to evaluated_opportunity.opportunity, evaluated_opportunity, :target=>"_blank" %></td>
                <td><%= evaluated_opportunity.agency %></td>
                <td><%= evaluated_opportunity.class_code %> </td> 
                <td><%= evaluated_opportunity.opp_type %></td>
                <td><%= evaluated_opportunity.post_date.strftime("%b %d") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @opportunities %>
    </div>
  </div>
  <% else %>
  <div class="row">
    <div class="span12">
        <div class="alert alert-warning" role="alert">
          Here are the latest opportunities from FBO.gov. <%= link_to "Log in", new_user_session_path %> or <%= link_to "join a team", teams_path %> and start finding some new business opportunities! 
        </div>
        <%= render "opportunities/title_search_box" %>
        <%= will_paginate @opportunities %>
        <table class="table table-hover">
          <thead>
              <th></th>
              <th>Opportunity</th>
              <th>Agency</th>
              <th>Classification</th>
              <th>Type</th>
              <th>Posted</th>
          </thead>
          <tbody>
            <% @opportunities.each do |opportunity| %>
              <tr>
                <td>
                </td>
                <td><%= link_to opportunity.opportunity, opportunity, :target=>"_blank" %></td>
                <td><%= opportunity.agency %></td>
                <td><%= opportunity.class_code %> </td> 
                <td><%= opportunity.opp_type %></td>
                <td><%= opportunity.post_date.strftime("%b %d") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @opportunities %>
    </div>
  </div>
<% end %>
