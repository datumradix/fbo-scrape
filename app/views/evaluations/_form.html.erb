<%= form_for(@evaluation) do |f| %>
  <% if @evaluation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>

      <ul>
      <% @evaluation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :evaluation_code_id %><br>
    <%= f.number_field :evaluation_code_id %>
  </div>
  <div class="field">
    <%= f.label :opportunity_id %><br>
    <%= f.number_field :opportunity_id %>
  </div>
  <div class="field">
    <%= f.label :team_id %><br>
    <%= f.number_field :team_id %>
  </div>

  <%= f.fields_for :comments, @evaluation.comments.build do |comment| %> 
    <div class="field">
      <%= comment.text_field :name %>
      <%= comment.text_area :comment, placeholder: "Comment", rows: 5 %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

