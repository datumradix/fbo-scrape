<div class="row">
  <div class="span10 offset1">
    <% if notice %>
      <div class="alert alert-block alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><%= notice %></p>
      </div>
    <% end %>
  </div>
</div>

<% if @user.role_id > 3 %>
  <div class="row">
    <div class="span9">
      <p><%= @current_team.company.name %></p>

      <h3><%= @user.role.title %> </h3>
    
      <p><%= @user.role.description %> </p>
    </div>
    <div class="span3">
      <p>
        Username: <%= link_to @user.username, edit_user_path(@user) %>  
      </p>
      <p>
        Role: <%= link_to current_user.role.title, roles_path %> 
      </p>
    </div>
  </div>
  <br>
  <ul class="nav nav-tabs">
    <li class="active">
      <%= link_to "Opportunities", user_path(@user) %>
    </li>
    <li>
      <%= link_to "Teams", teams_path %>
    </li>
  </ul>
  <div class="row">
    <div class="span12">
      <h4>Watchlist Opportunities</h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Opportunity</th>
            <th>Team</th>
            <th>Lead</th>
            <th>Last Comment</th>
            <th>Post Date</th>
          </tr>
        </thead>
        <tbody>
        <% @capture_lead_teams_watchlists.each do |watchlist| %>
          <% if watchlist.team_id == @current_team_id %>
            <tr>
              <td> <%= link_to watchlist.opportunity.opportunity, watchlist.opportunity %> </td>
              <td> <%= link_to watchlist.team.name, watchlist.team %> </td>
              <td> <%= watchlist.team.users.find_by(role_id: 2).username %></td>
              <% if watchlist.comments.last %>
                <td> <%= watchlist.comments.last.comment %></td>
                <td> <%= watchlist.opportunity.post_date.strftime("%b %d") %> </td>
              <% else %>
                <td>None</td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

<% else %>

  <div class="row">
    <div class="span8 offset1">
      <p><%= @current_team.company.name %></p>
      <h4><%= @current_team.name %> </h4>
      <p><%= @current_team.description %> </p>
    </div>
    <div class="span3">
      <p>
        Username: <%= link_to @user.username, edit_user_path(@user) %>  
      </p>
      <p>
        Role: <%= link_to current_user.role.title, roles_path %> 
      </p>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="span10 offset1">
      <ul class="nav nav-tabs">
        <li class="active">
          <%= link_to "Evaluations", user_path(@user) %>
        </li>
        <li>
          <%= link_to "Team", team_members_path %>
        </li>
        <li>
          <%= link_to "Criteria", team_path(@current_team.id) %>
        </li>
        <li>
          <%= link_to "Reports", reports_path %>
        </li>
      </ul>

      <%= will_paginate @opportunities %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Opportunity</th>
            <th>Agency</th>
            <th>Classification</th>
            <th>Evaluation</th>
            <th>Post Date</th>
          </tr>
        </thead>

        <tbody>
          <%# team_comments_sorted_by_date = 1 %>
          <%# @current_team.evaluations.order("id DESC").each do |evaluation| %>
            <%# evaluation.comments.each do |comment| %>
            <% @opportunities.each do |opportunity| %>
              <% if opportunity.comments.present? %>
                <tr>
                  <td> <%= link_to opportunity.opportunity.opportunity, opportunity_path(opportunity.opportunity.id) %></td>
                  <td><%= opportunity.opportunity.agency %></td>
                  <td><%= opportunity.opportunity.class_code %> </td> 
                  <td><%= opportunity.opportunity.opp_type %></td>
                  <td><%= opportunity.opportunity.post_date.strftime("%b %d") %></td>
                  <%#= comment.name %>
                  <%#= comment.comment %>
                  <%#= evaluation.opportunity.post_date.strftime("%b %d") %> 
                </tr>
                <tr>
                  <td></td>
                  <th>Name</th>
                  <th colspan="4">Message</th>
                </tr>
                <% opportunity.comments.each do |comment| %>
                  <tr>
                    <td></td>
                    <td><%= comment.name %></td>
                    <td colspan="4"> <%= comment.comment %> </td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      <%= will_paginate @opportunities %>
    </div>
  </div>
<% end %>