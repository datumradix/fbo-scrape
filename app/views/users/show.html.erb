<div class="row">
  <div class="span9">
    <h4><%= @user.team.name %> </h4>
  
    <p><%= @user.team.description %> </p>
  </div>
  <div class="span3">
    <p>
      Username: <%= link_to @user.username, edit_user_path(@user) %>  
    </p>
    <p>
      Role: <%= link_to current_user.roles.first.title, roles_path %> 
    </p>
  </div>
</div>
<br>
<ul class="nav nav-tabs">
  <li class="active">
    <%= link_to "Home", user_path(@user) %>
  </li>
  <li>
    <%= link_to "Team", team_members_path %>
  </li>
  <li>
    <%= link_to "Selection Criteria", team_path(current_user.team_id) %>
  </li>
</ul>

<div class="row">
  <div class="span3 offset0">
    <h4>Opportunity Status</h4>
    <table class="table table-bordered">
      <tr><td>Total Opportunities</td><td><%= link_to @not_evaluated_count, opportunities_path(:set_filter => "1") %></td></tr>
      <tr><td>Watchlist</td><td><%= link_to @watchlist_count, opportunities_path(:set_filter => "2") %></td></tr>
      <tr><td>Reject</td><td><%= link_to @reject_count, opportunities_path(:set_filter => "3") %></td></tr>
    </table>
  </div>
  <div class="span3 offset6">
    <h4>Reporting</h4>
    <p>Show watchlist in <%= link_to "plain view", plain_views_path %>.</p>
  </div>
</div>
<small>Opportunity Status is a seven day history based on your selection criteria and evaluation activity.</small>
<hr>

<h4>Comments</h4>
<%= will_paginate @comments %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Post Date</th>
      <th>Opportunity</th>
      <th>Evaluation</th>
      <th>Name</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td> <%= comment.opportunity.post_date.strftime("%b %d") %> </td>
        <td> <%= link_to comment.opportunity.opportunity, opportunity_path(comment.opportunity) %></td>
        <td> <%= comment.opportunity.management_evaluation %> </td>
        <td><%= comment.name %></td>
        <td><%= comment.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @comments %>





